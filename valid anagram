bool isAnagram(char* s, char* t) {
    int s_len = 0;
    while (s[s_len] != '\0') {
        s_len++;
    }
    
    int t_len = 0;
    while (t[t_len] != '\0') {
        t_len++;
    }
    
    if (s_len != t_len) {
        return false;
    }
    
    int count[26] = {0};
    
    for (int i = 0; i < s_len; i++) {
        count[s[i] - 'a']++;
        count[t[i] - 'a']--;
    }
    
    for (int i = 0; i < 26; i++) {
        if (count[i] != 0) {
            return false;
        }
    }
    
    return true;
}
